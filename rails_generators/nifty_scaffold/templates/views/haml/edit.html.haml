- title "Modifier <%= singular_name.titleize %>"

<%= render_form %>

<%- if actions? :show, :index -%>
%p
  <%- if action? :show -%>
  = link_to "Modifier", edit_<%= singular_name %>_path(@<%= singular_name %>)
  |
  <%- end -%>
  <%- if action? :index -%>
  = link_to "Voir tout", <%= plural_name %>_path
  <%- end -%>
<%- end -%>
